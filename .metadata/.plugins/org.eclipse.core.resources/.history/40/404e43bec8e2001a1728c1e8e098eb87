package ch5.sec8;

/**
 * @author Kelvin
 * @version 2020年8月19日 下午5:00:55
 * @class instruction 接收本类的引用
 */

class Persons {
	private String name;
	private int age;
	Book book;
	Persons child;

	public Persons() {
		// TODO Auto-generated constructor stub
	}

	public Persons(String name, int age) {
		this.name = name;
		this.age = age;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public Book getBook() {
		return book;
	}

	public void setBook(Book book) {
		this.book = book;
	}

	public Persons getChild() {
		return child;
	}

	public void setChild(Persons child) {
		this.child = child;
	}

}

public class RefDemo06 {

	public static void main(String[] args) {
		Persons per = new Persons("张三", 30);
		Persons cld = new Persons("张草", 20);
		Book bk = new Book("JAVA SE核心技术", 90.5f);
		Book b = new Book("一千零一夜", 30.3f);
		
		per.setBook(bk);
		bk.setPerson(person);

	}

}
